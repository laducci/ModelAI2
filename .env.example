# Configurações do Servidor
NODE_ENV=development
PORT=3000

# Banco de Dados MongoDB
# Para desenvolvimento local: mongodb://localhost:27017/modelai
# Para MongoDB Atlas (produção): mongodb+srv://usuario:senha@cluster.mongodb.net/modelai
MONGODB_URI=mongodb://localhost:27017/modelai

# JWT Secret (ALTERE para uma chave segura em produção!)
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_com_pelo_menos_32_caracteres

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:3000

# Configurações de Email (opcional - para notificações futuras)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_do_app

# Configurações de Upload (para futuras implementações)
